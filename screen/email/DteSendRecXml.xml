<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd">
    <!-- see the mantle.account.InvoiceServices.send#InvoiceStoreEmail service for email parameter prep and call to send this email -->
    <parameter name="fiscalTaxDocumentId" required="true"/>
    <actions>

        <if condition="sri.renderMode == 'html'">
            <set field="preHeaderContent" from="subject"/>
            <set field="bodyContentLocation" value="component://MoquiChile/screen/email/EnvioXmlRecBody.html.ftl"/>
        </if>
        <service-call name="mchile.sii.DTEServices.get#DteInfo" in-map="context" out-map="context"/>
        <entity-find entity-name="mchile.dte.FiscalTaxDocumentContent" list="contentList">
            <econdition field-name="fiscalTaxDocumentId"/>
        </entity-find>
    </actions>
    <widgets>
        <render-mode>
            <text type="html" location="component://SimpleScreens/screen/email/EmailLayout.html.ftl"/>
        </render-mode>

        <section name="TextContent" condition="sri.renderMode != 'html'">
            <widgets>
                    <label text="Estimado(a) contacto de ${receiverName} (Rut ${receiverRut}):" type="p"/>
                    <label text="Adjunto encontrarÃ¡ el documento tributario ${doctypeName} con folio ${folio} emitido por ${issuerName} (Rut ${issuerRut})." type="p"/>
            </widgets>
        </section>
    </widgets>
</screen>
