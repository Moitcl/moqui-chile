<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd">
    <actions>
        <service-call name="mchile.humanteam.PayrollServices.get#PeriodParameters" in-map="context" out-map="context"/>
    </actions>
    <widgets>
        <label text="Period from: ${currentFromDate} to ${currentThruDate}" type="h2"/>
        <container-row>
            <row-col md="6">
                <container-box><box-header title="Valor UF"/><box-body>
                    <container-row>
                        <row-col lg="9"><label text="${currentUfTitle}"/></row-col>
                        <row-col lg="3"><label text="${ec.l10n.formatCurrency(currentUfValue, 'CLP', 2)}"/></row-col>
                    </container-row>
                    <container-row>
                        <row-col lg="3"><label text="${previousUfTitle}"/></row-col>
                        <row-col lg="9"><label text="${ec.l10n.formatCurrency(previousUfValue, 'CLP', 2)}"/></row-col>
                    </container-row>
                </box-body></container-box>
                <container-box><box-header title="Valor UTM UTA"/><box-body>
                    <container-row>
                        <row-col lg="6"><label text=""/></row-col>
                        <row-col lg="3"><label text="UTM"/></row-col>
                        <row-col lg="3"><label text="UTA"/></row-col>
                    </container-row>
                    <container-row>
                        <row-col lg="6"><label text="${ec.l10n.format(currentThruDate, 'MMMM yyyy')}"/></row-col>
                        <row-col lg="3"><label text="${ec.l10n.formatCurrency(currentUtmValue, 'CLP')}"/></row-col>
                        <row-col lg="3"><label text="${ec.l10n.formatCurrency(currentUtaValue, 'CLP')}"/></row-col>
                    </container-row>
                </box-body></container-box>
                <container-box><box-header title="Rentas Topes Imponibles"/><box-body>
                    <container-row>
                        <row-col lg="9"><label text="Para afiliados a una AFP (${ec.l10n.format(topeImponibleAfpUf, '#,###,#'} UF):"/></row-col>
                        <row-col lg="3"><label text="${ec.l10n.formatCurrency(topeImponibleAfpClp, 'CLP')}"/></row-col>
                    </container-row>
                    <container-row>
                        <row-col lg="9"><label text="Para afiliados al IPS (ex INP) (${ec.l10n.format(topeImponibleIpsUf, '#,###,#'} UF):"/></row-col>
                        <row-col lg="3"><label text="${ec.l10n.formatCurrency(topeImponibleIpsClp, 'CLP')}"/></row-col>
                    </container-row>
                    <container-row>
                        <row-col lg="9"><label text="Para Seguro de CesantÃ­a (${ec.l10n.format(topeImponibleAfcUf, '#,###,#'} UF):"/></row-col>
                        <row-col lg="3"><label text="${ec.l10n.formatCurrency(topeImponibleAfc, 'CLP')}"/></row-col>
                    </container-row>
                </box-body></container-box>
            </row-col>
        </container-row>
    </widgets>
</screen>