<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="Validador" default-menu-index="1">

    <parameter name="fiscalTaxDocumentId" required="true"/>

    <transition name="validateDte"><service-call name="mchile.DTEServices.validar#DTE" in-map="[fiscalTaxDocumentTypeEnumId:fiscalTaxDocumentTypeEnumId,
                rutEmisor:rutEmisor, folio:folio, fechaEmision:fechaEmision, monto:monto]" out-map="context"/>
        <default-response url="."/></transition>

    <transition name="pdf" read-only="true">
        <parameter name="fiscalTaxDocumentId"/>
        <actions>

            <set field="extraPathNameList" from="sri.screenUrlInfo.extraPathNameList"/>

            <if condition="extraPathNameList &amp;&amp; !fiscalTaxDocumentId">
                <set field="fiscalTaxDocumentId" from="extraPathNameList[0]"/></if>
            <entity-find-one entity-name="mchile.dte.FiscalTaxDocumentContent" value-field="document" cache="false">
                <field-map field-name="fiscalTaxDocumentId"/>
                <field-map field-name="fiscalTaxDocumentContentTypeEnumId" value="Ftdct-Pdf"/>
            </entity-find-one>
            <if condition="document == null"><then>
                <!-- NOTE: consider returning a default image instead of 404 -->
                <script>ec.web.sendError(404, null, null)</script>
            </then><else>
                <script>ec.web.sendResourceResponse(document.contentLocation, true)</script>
            </else></if>
        </actions>
        <default-response type="none"/>
    </transition>

    <transition name="xml" read-only="true">
        <parameter name="fiscalTaxDocumentId"/>
        <actions>
            <set field="extraPathNameList" from="sri.screenUrlInfo.extraPathNameList"/>


            <if condition="extraPathNameList &amp;&amp; !fiscalTaxDocumentId">
                <set field="fiscalTaxDocumentId" from="extraPathNameList[0]"/></if>
            <entity-find-one entity-name="mchile.dte.FiscalTaxDocumentContent" value-field="document" cache="false">
                <field-map field-name="fiscalTaxDocumentId"/>
                <field-map field-name="fiscalTaxDocumentContentTypeEnumId" value="Ftdct-Xml"/>
            </entity-find-one>
            <if condition="document == null"><then>
                <!-- NOTE: consider returning a default image instead of 404 -->
                <script>ec.web.sendError(404, null, null)</script>
            </then><else>
                <script>ec.web.sendResourceResponse(document.contentLocation, true)</script>
            </else></if>
        </actions>
        <default-response type="none"/>
    </transition>

    <actions>
        <entity-find-one entity-name="mchile.dte.FiscalTaxDocumentContent" value-field="dteMap">
            <field-map field-name="fiscalTaxDocumentId" from="fiscalTaxDocumentId"/>
        </entity-find-one>

        <!-- Se busca ubicaciÃ³n de XML y PDF -->
        <service-call name="mchile.DTEServices.get#DteContent"
                      in-map="[fiscalTaxDocumentId:fiscalTaxDocumentId, fiscalTaxDocumentContentTypeEnumId:'Ftdct-Xml']" out-map="context"/>
        <set field="xmlFilename" from="content"/>

        <service-call name="mchile.DTEServices.get#DteContent"
                      in-map="[fiscalTaxDocumentId:fiscalTaxDocumentId, fiscalTaxDocumentContentTypeEnumId:'Ftdct-Pdf']" out-map="context"/>
        <set field="pdfFilename" from="content"/>
    </actions>
    <widgets>
        <container-row><row-col lg="12">
            <!-- TODO: Descargar PDF -->
            <section name="EditDocSection"><widgets>
                <label text="Documento Encontrado" type="h4"/>
                <form-single name="EditDocForm" transition="validateDte">
                    <field name="xml">
                        <default-field title=" ">
                            <link url="xml/${xmlFilename}" parameter-map="[fiscalTaxDocumentId:fiscalTaxDocumentId]" text="Descargar XML" link-type="anchor"/>
                        </default-field>
                    </field>
                    <field name="pdf">
                        <default-field title=" ">
                            <link url="pdf/${pdfFilename}" parameter-map="[fiscalTaxDocumentId:fiscalTaxDocumentId]" text="Descargar PDF" link-type="anchor"/>
                        </default-field>
                    </field>
                    <field name="volver">
                        <default-field title="">
                            <link url="../Validador" tooltip="Volver" text="Volver"/>
                        </default-field>
                    </field>
                </form-single>
            </widgets></section>
        </row-col></container-row>
    </widgets>
</screen>
