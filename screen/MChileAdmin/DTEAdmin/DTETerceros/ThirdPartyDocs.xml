                            <field name="amount">
                                <default-field title="Monto Total">
                                    <text-line size="30"/>
                                </default-field>
                            </field>
                            <field name="montoNeto">
                                <default-field title="Monto Neto">
                                    <text-line size="15"/>
                                </default-field>
