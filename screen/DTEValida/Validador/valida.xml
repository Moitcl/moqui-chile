<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd" require-authentication="anonymous-all" default-menu-title="Valida">

    <parameter name="fiscalTaxDocumentTypeEnumId"/>
    <parameter name="rutEmisor"/>
    <parameter name="folio"/>
    <parameter name="fechaEmision"/>
    <parameter name="monto"/>

    <always-actions>
        <if condition="fiscalTaxDocumentTypeEnumId != null &amp;&amp; fiscalTaxDocumentTypeEnumId.size() > 0 &amp;&amp; rutEmisor != null &amp;&amp; rutEmisor.size() > 0
                       &amp;&amp; folio != null &amp;&amp; folio.size() > 0 &amp;&amp; fechaEmision != null &amp;&amp; fechaEmision.size() > 0
                       &amp;&amp; monto != null &amp;&amp; monto.size() > 0">
            <service-call name="mchile.DTEServices.validar#DTE" in-map="context" out-map="context"/>
            <entity-find-one entity-name="mchile.dte.FiscalTaxDocumentContent" value-field="dteMap"/>
        </if>
    </always-actions>

    <transition name="pdf" read-only="true">
        <actions>
            <if condition="!fiscalTaxDocumentId"><return error="true" message="Documento no encontrado."/></if>

            <set field="extraPathNameList" from="sri.screenUrlInfo.extraPathNameList"/>

            <if condition="extraPathNameList &amp;&amp; !fiscalTaxDocumentId">
                <set field="fiscalTaxDocumentId" from="extraPathNameList[0]"/></if>
            <entity-find-one entity-name="mchile.dte.FiscalTaxDocumentContent" value-field="document" cache="false">
                <field-map field-name="fiscalTaxDocumentId"/>
                <field-map field-name="fiscalTaxDocumentContentTypeEnumId" value="Ftdct-Pdf"/>
            </entity-find-one>
            <if condition="document == null"><then>
                <!-- NOTE: consider returning a default image instead of 404 -->
                <script>ec.web.sendError(404, null, null)</script>
            </then><else>
                <script>ec.web.sendResourceResponse(document.contentLocation, true)</script>
            </else></if>
        </actions>
        <default-response type="none"/>
    </transition>

    <transition name="xml" read-only="true">
        <parameter name="fiscalTaxDocumentId"/>
        <actions>
            <if condition="!fiscalTaxDocumentId"><return error="true" message="Documento no encontrado."/></if>
            <set field="extraPathNameList" from="sri.screenUrlInfo.extraPathNameList"/>


            <if condition="extraPathNameList &amp;&amp; !fiscalTaxDocumentId">
                <set field="fiscalTaxDocumentId" from="extraPathNameList[0]"/></if>
            <entity-find-one entity-name="mchile.dte.FiscalTaxDocumentContent" value-field="document" cache="false">
                <field-map field-name="fiscalTaxDocumentId"/>
                <field-map field-name="fiscalTaxDocumentContentTypeEnumId" value="Ftdct-Xml"/>
            </entity-find-one>
            <if condition="document == null"><then>
                <!-- NOTE: consider returning a default image instead of 404 -->
                <script>ec.web.sendError(404, null, null)</script>
            </then><else>
                <script>ec.web.sendResourceResponse(document.contentLocation, true)</script>
            </else></if>
        </actions>
        <default-response type="none"/>
    </transition>

    <widgets>
        <section name="ValidationResults" condition="fiscalTaxDocumentId">
            <widgets>
                <label text="Documento Encontrado" type="h4"/>
                <form-single name="EditDocForm" transition="validateDte">
                <field name="xml">
                    <default-field title=" ">
                        <link url="xml" parameter-map="[fiscalTaxDocumentTypeEnumId:fiscalTaxDocumentTypeEnumId, rutEmisor:rutEmisor, folio:folio, fechaEmision:fechaEmision, monto:monto]" text="Descargar XML" link-type="anchor"/>
                    </default-field>
                </field>
                <field name="pdf">
                    <default-field title=" ">
                        <link url="pdf" parameter-map="[fiscalTaxDocumentTypeEnumId:fiscalTaxDocumentTypeEnumId, rutEmisor:rutEmisor, folio:folio, fechaEmision:fechaEmision, monto:monto]" text="Descargar PDF" link-type="anchor"/>
                    </default-field>
                </field>
                </form-single>
            </widgets>
        </section>
        <container-row><row-col lg="6">
            <section name="EditDocSection"><widgets>
                <form-single name="EditDocForm">

                    <field name="fiscalTaxDocumentTypeEnumId">
                        <default-field title="Tipo Documento">
                            <drop-down>
                                <entity-options key="${enumId}">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="FiscalTaxDocumentType"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="rutEmisor"><default-field title="RUT Emisor"><text-line size="15"/></default-field></field>
                    <field name="folio"><default-field><text-line size="6"/></default-field></field>
                    <field name="fechaEmision">
                        <default-field title="Fecha EmisiÃ³n">
                            <date-time format="YYYY-MM-DD"/>
                        </default-field>
                    </field>
                    <field name="monto"><default-field><text-line size="20"/></default-field></field>
                    <field name="submitButton"><default-field title="Validar"><submit/></default-field></field>
                </form-single>
            </widgets></section>
        </row-col></container-row>
    </widgets>
</screen>
