                <econdition field-name="adjCalcServiceId" value="MChile.PayrollPeriodAdjustments"/>
                <econdition field-name="parameterName" value="TasaAfcContratoIndefinidoTrabajador"/>
                <date-filter valid-date="periodFromDate"/>
