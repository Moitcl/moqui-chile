            <entity-find entity-name="mantle.humanres.employment.PayrollAdjCalcParameter" list="parameterList">
                <econdition field-name="adjCalcServiceId" value="MChile.PayrollPeriodAdjustments"/>
                <econdition field-name="parameterName" value="RentaMinimaMenoresCLP"/>
