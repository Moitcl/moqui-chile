<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-2.1.xsd">

    <service verb="calculate" noun="SalesTaxChile">
        <implements service="mantle.other.TaxServices.calculate#SalesTax"/>
        <actions>
            <set field="taxResults" from="[]"/>
            <set field="taxRate" from="0.19"/>
            <set field="baseMap" from="[taxRate:taxRate, taxAuthorityId:'CL_SII', taxName:'IVA', alreadyIncluded:'Y']"/>
            <iterate list="items" entry="item">
                <if condition="item.itemTypeEnumId == 'ItemProduct'">
                    <entity-find-count entity-name="mantle.product.category.ProductCategoryMember" count-field="exentoCount">
                        <econdition field-name="productId" from="item.productId"/>
                        <econdition field-name="productCategoryId" value="ClVatTaxExento"/>
                        <date-filter/>
                    </entity-find-count>
                    <if condition="exentoCount > 0"><continue/></if>
                    <script>
                        <![CDATA[
                            itemAmount = item.unitAmount
                            // taxAmount = itemAmount / (1 + taxRate) * taxRate (itemAmount ES neto)
                            taxAmount = itemAmount * taxRate
                            taxResults += baseMap + [itemId:item.itemId, taxAmount:taxAmount]

                            println "item.quantity: "+item.quantity
                            println "item.unitAmount :"+item.unitAmount
                            println "taxRate :"+taxRate
                            println "itemAmount :"+itemAmount
                            println "taxAmount :"+taxAmount
                            println "taxResults :"+taxResults
                        ]]>
                    </script>
                </if>
            </iterate>
        </actions>
    </service>

</services>